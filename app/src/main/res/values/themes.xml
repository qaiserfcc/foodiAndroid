<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HallyuStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:textViewStyle">@font/metropolis</item>
        <item name="fontFamily">@font/metropolis</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <item name="windowNoTitle">true</item>
        <!--        <item name="windowActionBar">false</item>-->
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>

    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorOnPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/hallyu_icon</item>

        <item name="postSplashScreenTheme">@style/Theme.HallyuStyle</item>
    </style>


    <!--    Bottom Layout Theme-->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>


    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Image.RoundedCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!--    Appbar-->
    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/metropolis_bold</item>
        <item name="android:fontFamily">@font/metropolis_bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/metropolis_semibold</item>
        <item name="android:fontFamily">@font/metropolis_semibold</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/metropolis_semibold</item>
        <item name="android:fontFamily">@font/metropolis_semibold</item>
    </style>


    <!-- set the rounded drawable as background to your bottom sheet -->

    <style name="buttonTheme" parent="Theme.MaterialComponents.Light">
        <item name="theme">@style/buttonTheme</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/btn_custom</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <!--    set TabLayout-->
    <style name="CustomTabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyPopupStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/btn_custom3</item>
    </style>
    <style name="AppTheme.Dialog.FullScreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
</resources>